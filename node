#!/usr/bin/env groovy Jenkinsfile.

node {
    def username = 'Jenkins'

    stage('Build') {
        echo 'Building'
    }
    stage('Test') {
        echo 'Testing'
    }
    stage('Deploy') {
        echo 'Deploying'
        echo 'Hello Mr. ${username}'
        echo "I said, Hello Mr. ${username}"
    }
}